{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "skipLibCheck": false,
    "alwaysStrict": false,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017"],
    "types": ["node"],
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
